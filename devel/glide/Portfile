# $Id$

PortSystem          1.0
PortGroup           github 1.0

github.setup        Masterminds glide 0.12.0 v
categories          devel
platforms           darwin
maintainers         nomaintainer
license             MIT

description         A package manager for the Go language.

long_description    Are you used to tools such as Cargo, npm, Composer, Nuget, \
                    Pip, Maven, Bundler, or other modern package managers? If \
                    so, Glide is the comparable Go tool.

depends_build       port:go
use_configure       no

checksums           rmd160  ba19c257e0b9960710d4401d71c9c731ea95283e \
                    sha256  c234061fcebeb4cb8b78d4a5aa3e7015163767484340be16a076a8aa2c340a00

worksrcdir          ${workpath}/src/github.com/Masterminds/glide
post-extract {
    file mkdir [file dirname ${worksrcdir}]
    move [glob ${workpath}/glide-*] ${worksrcdir}
}

build.cmd           make
build.target        build
build.env           GOPATH="${workpath}"

destroot {
    xinstall ${worksrcpath}/glide ${destroot}${prefix}/bin
}
