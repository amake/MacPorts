# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4
# $Id$

PortSystem      1.0
PortGroup       github 1.0

github.setup    peco peco 0.4.2 v
github.tarball_from releases
supported_archs i386 x86_64
set arch        [expr {($tcl_platform(pointerSize) == 8) ? "amd64" : "386"}]
distname        ${name}_darwin_${arch}
categories      sysutils
homepage        http://peco.github.io
description     Simplistic interactive filtering tool
long_description \
        peco can be a great tool to filter stuff like logs, process stats, find \
        files, because unlike grep, you can type as you think and look through  \
        the current results.
license         MIT

maintainers     kimuraw openmaintainer
platforms       darwin

checksums       rmd160  d5fbad598e133c223e9744757f888b03c2a8d448 \
                sha256  ef8ffd9f009522d74f8725e651fe0b0aa6ead3dc794f49e753cdd691fa92a6f0

use_configure   no
use_zip         yes

build           {}

destroot {
    xinstall -W ${worksrcpath} peco ${destroot}${prefix}/bin
    set docdir ${prefix}/share/doc/${name}
    xinstall -d ${destroot}${docdir}
    xinstall -m 0644 -W ${worksrcpath} Changes README.md ${destroot}${docdir}
}
